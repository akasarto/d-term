<local:MainHeaderBase
    x:Class="dTerm.UI.Wpf.Views.MainHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="clr-namespace:dTerm.Core.Localization;assembly=dTerm.Core"
    xmlns:local="clr-namespace:dTerm.UI.Wpf.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800"
>

    <md:ColorZone Mode="Custom" Background="Black" Foreground="White" Padding="16" ClipToBounds="False" Grid.Row="0">

        <DockPanel>

            <Button DockPanel.Dock="Right" Style="{DynamicResource MaterialDesignToolForegroundButton}" ToolTip="{x:Static l:Content.Settings}">
                <md:PackIcon Kind="Cog" Foreground="White" Height="24" Width="24" />
            </Button>

            <StackPanel Orientation="Horizontal">
                <md:PackIcon Kind="FormatListBulleted" Padding="0" Margin="0" Foreground="White" Height="32" Width="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="16 0 0 0" Text="{x:Static l:Content.Shell_Processes}" />
            </StackPanel>

        </DockPanel>

    </md:ColorZone>

</local:MainHeaderBase>
