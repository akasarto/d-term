<local:MainWindowBase
    x:Class="dTerm.UI.Wpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="clr-namespace:dTerm.Core.Localization;assembly=dTerm.Core"
    xmlns:userControls="clr-namespace:dTerm.UI.Wpf.Views"
    xmlns:local="clr-namespace:dTerm.UI.Wpf.Views"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    d:DesignWidth="{x:Static local:Dimensions.MainWindowMinWidth}"
	d:DesignHeight="{x:Static local:Dimensions.MainWindowMinHeight}"
	MinWidth="{x:Static local:Dimensions.MainWindowMinWidth}"
	MinHeight="{x:Static local:Dimensions.MainWindowMinHeight}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d"
    Title="{x:Static l:Content.AppTitle}"
>

    <userControls:ShellProcessPanel />

</local:MainWindowBase>
