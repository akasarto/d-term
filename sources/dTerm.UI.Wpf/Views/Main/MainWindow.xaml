<local:MainWindowBase
    x:Class="dTerm.UI.Wpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:dTerm.UI.Wpf.UserControls"
    xmlns:local="clr-namespace:dTerm.UI.Wpf.Views"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    d:DesignWidth="{x:Static local:Dimensions.MinWidth}"
	d:DesignHeight="{x:Static local:Dimensions.MinHeight}"
	MinWidth="{x:Static local:Dimensions.MinWidth}"
	MinHeight="{x:Static local:Dimensions.MinHeight}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d"
    Title="dTerm"
>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <userControls:ShellProcessesPanel Grid.Row="0" />

    </Grid>

</local:MainWindowBase>
