<local:IconBrowserItemBase
    x:Class="dTerm.UI.Wpf.Views.IconBrowserItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:dTerm.UI.Wpf.Views"
    mc:Ignorable="d" 
>

    <StackPanel x:Name="aliases" Width="64" Height="64" Background="Transparent">

        <md:PackIcon x:Name="icon"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="32"
            Height="32" />

        <TextBlock x:Name="primaryName"
                   TextTrimming="CharacterEllipsis"
                   HorizontalAlignment="Center" />

    </StackPanel>

</local:IconBrowserItemBase>
