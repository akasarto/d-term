<views:BindableUserControl
    x:Class="dTerm.UI.Wpf.Views.IconBrowserItem"
    x:TypeArguments="views:IconBrowserItemViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:dTerm.UI.Wpf.Views"
    mc:Ignorable="d" 
>

    <StackPanel Width="64" Height="64" Background="Transparent" ToolTip="{Binding Aliases}">
        <md:PackIcon Kind="{Binding Kind}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" Height="32" />
        <TextBlock Text="{Binding Aliases}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" />
    </StackPanel>

</views:BindableUserControl>
