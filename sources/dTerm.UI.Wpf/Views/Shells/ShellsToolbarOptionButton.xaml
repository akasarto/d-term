<UserControl
    x:Class="dTerm.UI.Wpf.Views.ShellsToolbarOptionButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800"
>

    <Button Click="OnExecuteButtonClick" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" ToolTip="{Binding Name}">

        <Button.ContextMenu>
            <ContextMenu>
                <MenuItem Click="OnEditButtonClick" Header="Edit" Icon="{materialDesign:PackIcon Kind=Edit}" />
                <MenuItem Click="OnChangeIconButtonClick" Header="Change Icon" Icon="{materialDesign:PackIcon Kind=ImageEdit}" />
                <Separator />
                <MenuItem Click="OnDeleteButtonClick" Header="Delete" Icon="{materialDesign:PackIcon Kind=Delete}" />
            </ContextMenu>
        </Button.ContextMenu>

        <materialDesign:PackIcon Kind="{Binding Icon, Converter={StaticResource packIconConverter}}" Height="24" Width="24" FocusManager.IsFocusScope="False" />

    </Button>

</UserControl>
