<local:ShellProcessStartButtonBase
    x:Class="dTerm.UI.Wpf.Views.ShellProcessButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:dTerm.UI.Wpf.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800"
>

    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" x:Name="launchButton">

        <Button.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="edit" Header="Edit" Icon="{materialDesign:PackIcon Kind=Edit}" />
                <MenuItem x:Name="changeIcon" Header="Change Icon" Icon="{materialDesign:PackIcon Kind=ImageEdit}" />
                <Separator />
                <MenuItem x:Name="deleteButton" Header="Delete" Icon="{materialDesign:PackIcon Kind=Delete}" />
            </ContextMenu>
        </Button.ContextMenu>

        <materialDesign:PackIcon x:Name="launchButtonIcon" Height="24" Width="24" FocusManager.IsFocusScope="False" />

    </Button>

</local:ShellProcessStartButtonBase>
